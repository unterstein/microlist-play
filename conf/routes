# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# pages
GET     /                                  controllers.Application.index()
GET     /todo                              controllers.TodoList.todoDefault()
GET     /todo/:id                          controllers.TodoList.todo(id)

# Authentication
GET     /login                             controllers.Authentication.login()
GET     /logout                            controllers.Authentication.logout()
POST    /login                             controllers.Authentication.loginUser()
POST    /register                          controllers.Authentication.registerUser()
GET     /registerpanel                     controllers.Authentication.registerPanel()

# Todo
PUT     /todo/:id/:name                    controllers.TodoList.updateProject(id, name)
POST    /todo/                             controllers.TodoList.addProject()
DELETE  /todo/:id                          controllers.TodoList.removeProject(id)
POST    /task/:projectId/:taskName         controllers.TodoList.addTask(projectId, taskName)
PUT     /task/:taskId/:state               controllers.TodoList.changeTaskState(taskId, state)

# Javascript routing
GET     /assets/javascripts/routes         controllers.Application.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                      controllers.Assets.at(path="/public", file)
