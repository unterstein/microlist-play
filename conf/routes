# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# pages
GET     /                                  controllers.Application.index()
GET     /login                             controllers.Application.login()

# Authenticate
POST    /signin/loginuser                  controllers.Application.loginUser()
POST    /signin/registeruser               controllers.Application.registerUser()
GET     /signin/registerpanel              controllers.Application.registerPanel()

# Javascript routing
GET     /assets/javascripts/routes         controllers.Application.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                      controllers.Assets.at(path="/public", file)
